    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Main.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\outputs\\Main.exe",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug - TestMain.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\outputs\\TestMain.exe",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}